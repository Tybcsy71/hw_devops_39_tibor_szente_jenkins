pipeline {
    agent any

    stages {
        stage('Download Batch Script') {
            steps {
                script {
                    bat "curl https://raw.githubusercontent.com/Tybcsy71/hw_devops_39_tibor_szente_jenkins/main/install_apache.sh > install_apache.sh"
                    bat "chmod +x install_apache.sh ."
                }
            }
        }
        
        stage('Run Batch Script') {
            agent {label 'jenkins-slave'}
            steps {
                script {
                    bat "install_apache.sh"
                }
            }
        }
    }
}